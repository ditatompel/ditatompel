URxvt.italicFont:  xft:bitstream vera sans mono:size=10:antialias=true
URxvt.boldItalicfont:  xft:bitstream vera sans mono:size=10:antialias=true

URxvt.letterSpace: 0
URxvt.lineSpace: 0
